<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GestionOrange.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:GestionOrange.Views"
    Shell.FlyoutBehavior="Locked"
    FlyoutBackgroundColor="{AppThemeBinding Light={StaticResource FlyoutLight}, Dark=Black}"
    Title="GestionOrange">

    <Shell.FlyoutHeader>
        <Grid Margin="10">
            <Image Source="orange_logo.png"
                   HeightRequest="100"/>
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Carte" Icon="data_img.png">
        <ShellContent
        ContentTemplate="{DataTemplate views:MapPage}"
        Route="MapPage" />
    </FlyoutItem>
    
    <FlyoutItem Title="Gestion base de donnÃ©es" Icon="data_img.png">
        <ShellContent
            ContentTemplate="{DataTemplate views:DataListPage}"
            Route="DataListPage" />
    </FlyoutItem>

</Shell>
