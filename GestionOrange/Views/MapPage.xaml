<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="GestionOrange.Views.MapPage">

    <ContentPage.Resources>
        <Style TargetType="Label" x:Key="Titre">
            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Primary}}"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontSize" Value="Header"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>
    </ContentPage.Resources>

    <Grid ColumnDefinitions="*,*"
          RowDefinitions="Auto,*,Auto">
        <Label Text="Carte" Style="{StaticResource Titre}"
               Grid.Column="0" Grid.Row="0"/>
        <maps:Map x:Name="myMap" WidthRequest="700" HeightRequest="700" Margin="0" Grid.Column="0" Grid.Row="1"/>
        <Picker x:Name="pickerSecteur" Title="Secteur" WidthRequest="300" HeightRequest="70" Grid.Column="1" Grid.Row="0" SelectedIndexChanged="SelectedIndexChanged">
            <Picker.Items>
                <x:String>Lille</x:String>
                <x:String>Douai</x:String>
                <x:String>Lens</x:String>
                <x:String>Arras</x:String>
            </Picker.Items>
        </Picker>
    </Grid>
</ContentPage>
